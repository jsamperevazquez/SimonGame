<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/botonStart"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="171dp"
        android:layout_height="58dp"
        android:backgroundTint="#FBC02D"
        android:text="@string/boton_start"
        app:icon="@drawable/simonicon"
        app:iconGravity="start"
        app:iconSize="30dp"
        app:iconTint="#354924"
        app:iconTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.959" />

    <TextView
        android:id="@+id/textViewRonda"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="138dp"
        android:layout_height="68dp"
        android:fontFamily="casual"
        android:text="@string/texto_ronda"
        android:textColor="#FFFFFD"
        android:textSize="34sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botonVerde"
        android:layout_width="181dp"
        android:layout_height="175dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="208dp"
        android:background="@drawable/boton_verde"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botonAmarillo"
        android:layout_width="181dp"
        android:layout_height="175dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/boton_amarillo"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/botonVerde"
        app:layout_constraintStart_toEndOf="@+id/botonVerde"
        app:layout_constraintTop_toTopOf="@+id/botonVerde"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botonRojo"
        android:layout_width="181dp"
        android:layout_height="175dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/boton_rojo"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/botonVerde"
        app:layout_constraintEnd_toEndOf="@+id/botonVerde"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/botonVerde"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botonAzul"
        android:layout_width="181dp"
        android:layout_height="175dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/boton_azul"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/botonRojo"
        app:layout_constraintStart_toEndOf="@+id/botonRojo"
        app:layout_constraintTop_toTopOf="@+id/botonRojo"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/gameOverView"
        android:layout_width="392dp"
        android:layout_height="276dp"
        android:contentDescription="@string/game_over"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/botonStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.521"
        app:srcCompat="@drawable/game_over" />

</androidx.constraintlayout.widget.ConstraintLayout>